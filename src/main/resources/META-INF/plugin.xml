<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.external_inspections</id>
    <name>External Inspections</name>
    <vendor>xepozz</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.ExternalInspections</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable
                parentId="language"
                instance="com.github.xepozz.external_inspections.settings.ExternalInspectionsConfigurable"
                id="com.github.xepozz.external_inspections.settings.ExternalInspectionsConfigurable"
                displayName="External Inspections"/>
        <localInspection language=""
                         displayName="External Inspection"
                         groupName="External"
                         enabledByDefault="true"
                         implementationClass="com.github.xepozz.external_inspections.inspections.ExternalLocalInspection"/>
        <fileBasedIndex
                implementation="com.github.xepozz.external_inspections.index.ExternalDiagnosticsIndex"/>
        <standardResourceProvider
                implementation="com.github.xepozz.external_inspections.ExternalInspectionsResourceProvider"/>
    </extensions>
</idea-plugin>
